<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
<LinearLayout android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:background="@color/myWindowBackground">
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:scaleType="centerCrop"
        android:animateLayoutChanges="true" >
        <ImageView android:id="@+id/picOfRestorant"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:scaleType="centerCrop"
            android:contentDescription="@string/action_settings"/>
        <ImageView android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:background="@drawable/transparent_background"
            android:contentDescription="@string/action_settings"/>
        <TextView android:id="@+id/txtNameOfRestorant"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/myPrimaryColor"
            android:textSize="@dimen/activity_vertical_margin"
            android:textAllCaps="true"
            android:paddingLeft="10dip"
            android:paddingBottom="30dip"
            android:layout_alignParentBottom="true"/>
        <TextView android:id="@+id/txtAddressOfRestorant"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/myPrimaryColor"
            android:textSize="@dimen/smalll_text"
            android:paddingLeft="10dip"
            android:paddingBottom="13dip"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView android:id="@+id/txtDetailOfRestorant"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#44330b"
        android:textSize="@dimen/medium_text"
        android:padding="15dip"
        android:animateLayoutChanges="true"/>
</LinearLayout>
</ScrollView>